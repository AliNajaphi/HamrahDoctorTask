<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/_2sdp"
    android:id="@+id/RelUploadItem"
    android:background="@drawable/back_gray3_smoth"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp">



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgUpload_Item"
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/uploadProgress"
        style="@style/uploadProgressBar"
        android:rotation="-90"
        android:progress="0"
        android:max="100"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtPercent"
        android:text="0%"
        android:textSize="@dimen/_10sdp"
        android:background="@drawable/back_white_smoth"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_2sdp"
        android:fontFamily="@font/yekan_bold"
        android:gravity="center"
        android:minWidth="@dimen/_35sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgFinishUpload"
        android:scaleType="centerInside"
        android:src="@drawable/ic_complete"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"/>


</RelativeLayout>